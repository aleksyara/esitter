<h1>Additinal Info</h1>
    <p>Please fill in this form below in order to complete a register proceess with <b><%= title %></b>.</p>
    <hr>

   <form id="add-form" action="/users/<%= user._id %>" method="POST">
    <h1>User: <%= user.email %></h1>
    <ul>
        <li>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="<%= user.firstName %>">
        </li>
        <li>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="<%= user.lastName %>">
        </li>
        <li>
        <label for="address">Address:</label>
        <div>
            <div>
              <input type="text" name="addressLine1" id="addressLine1" value="<%= user.address ? user.address.address1 : null %>">
              <label for="addressLine1">Street #1</label>
            </div>
          </div>
          <div>
            <div>
              <input type="text" name="addressLine2" id="addressLine2" value="<%= user.address ? user.address.address2 : null %>">
              <label for="addressLine2">Street #2</label>
            </div>
          </div>
          <div>
            <div class="city-wrap">
              <input type="text" name="city" id="city" value="<%= user.address ? user.address.city : null %>">
              <label for="city">City</label>
            </div>
             <div class="state-wrap">
              <input type="text" name="state" id="state" value="<%= user.address ? user.address.state : null %>">
              <label for="state">State</label>
            </div>
             <div class="zip-wrap">
              <input type="text" pattern="[0-9]*" name="zip" id="zip" value="<%= user.address ? user.address.zip : null %>">
              <label for="zip">Zip</label>
            </div>
          </div>
        </li>
        <li>
        <label for="phone">Phone:</label>
        <input type="number" id="phone" name="phone" value="<%= user.phone %>">
        </li>
        <li>
        <label for="dob"></label>Date of Birth</label>
        <input type="date" id="dob" name="dob" value="<%= user.dob %>">
        </li>
        <li>
        <label>Your interest area</label>
            <select name="skills">
                <option value="ART">ART</option>
                <option value="CHE">CHESS</option>
                <option value="MUS">MUSIC</option>
                <option value="ENG">ENGLISH</option>
                <option value="CODE">INTRO TO CODING</option>
                <option value="STG">STAGE PERFOMNACE</option>
            </select>
        </li>
        <li>
          <label for="about"></label>About You:</label>
          <input type="text" placeholder="Say something about yourself" id="about" name="about" value="<%= user.about %>">
          </li>
        <br>

        <h3>Emergency Contact Info</h3>

        <li>
        <label for="emrgnFirstName">First Name:</label>
        <input type="text" id="emrgnFirstName" name="emrgnFirstName" value="<%= user.emergency ? user.emergency.firstName : null %>">
        </li> 
        <li>
        <label for="emrgnLasttName">Last Name:</label>
        <input type="text" id="emrgnFirstName" name="emrgnLastName" value="<%= user.emergency ? user.emergency.lastName : null %>">
        </li>
        <li>
        <label for="emrgnPhone">Emergency Phone:</label>
        <input type="number" id="emrgnPhone" name="emrgnPhone" value="<%= user.emergency ? user.emergency.phone : null %>">
        </li> 
        <li>
        <label for="emrgnEmail">Emergency Email</label>
        <input type="text" placeholder="Enter Email" id="emrgnEmail" name="emrgnEmail" value="<%= user.emergency ? user.emergency.email : null %>">
        </li>  
    <br>

    </ul>    

    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
    <button type="submit" class="registerbtn">Register</button>


 </form>

