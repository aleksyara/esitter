<%- include('../partials/header') %>

<h1>User Page</h1>

<a href="/users/additional-info">Edit your info</a>

<%if(user.isMentor){%>
  <h1>Wellcome, <%= user.firstName + " " + user.lastName %></h1>
  <a href="/classes/new">Open a new class</a>

  <section id="users-classes-as-mentor">
    <table>
      <thead>
        <tr>
          <th>Topic</th>
          <th>Description</th>
          <th>Start Date</th>
          <th>End Date</th>
        </tr>
      </thead>
      <tbody>
        <% user.classesAsMentor.forEach(function(c) { %>
        <tr>
          <td><%= c.topic %></td>
          <td><%= c.description %></td>
          <td><%= c.startDate %></td>
          <td><%= c.endDate %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </section>

<%}%>

<%if(user.isStudent){%>
    <h1>Wellcome, <%= user.firstName + " " + user.lastName %></h1>
    <p>sign up for a class</p>
    <a href="/classes">Show available classes</a>

    <p>These are classes you are enrolled in:</p>
    <section id="users-classes-as-student">
      <table>
        <thead>
          <tr>
            <th>Topic</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
          </tr>
        </thead>
        <tbody>
          <% user.classesAsStudent.forEach(function(c) { %>
          <tr>
            <td><%= c.topic %></td>
            <td><%= c.description %></td>
            <td><%= c.startDate %></td>
            <td><%= c.endDate %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </section>

  
<%}%>
        
        <!-- implementing reviews  -->
        <br><br><h2>Add Review</h2>
        <form id="add-review-form" method="POST"
          action="/reviews/<%= user._id %>">
          <label>Leave Review:</label>
          <textarea name="content"></textarea>
          <label>Rating:</label>
          <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
          
          <input type="submit" value="Add Review">
        </form>

        <% if (user.reviews.length) { %>
          <table>
            <thead>
              <tr>
                <th>Date</th>
                <th>Review</th>
                <th>Rating</th>
              </tr>
            </thead>
            <tbody>
              <% let total = 0 %>
              <% user.reviews.forEach(function(r) { %>
                <% total += r.rating %>
                <tr>
                  <td><%= r.createdAt.toLocaleDateString() %></td>
                  <td><%= r.content %></td>
                  <td><%= r.rating %></td>
                </tr>
              <% }); %>
              <tr>
                <td colspan="2"></td>
                <td><strong><%= (total / user.reviews.length).toFixed(1) %></strong></td>
              </tr>
            </tbody>
          </table>
        <% } else { %>
          <h5>No Reviews Yet</h5>
        <% } %>

<%- include('../partials/footer') %>